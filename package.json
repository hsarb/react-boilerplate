{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "A minimal library boilerplate for building react applications with flow, eslint and jest.",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production babel-node ./bin/build.js",
    "dev": "NODE_ENV=development babel-node ./bin/start.js",
    "flow": "flow --show-all-errors",
    "format": "prettier --write '**/*.js'",
    "lint": "eslint './src/**/*.js' --quiet",
    "pr-build": "yarn flow && yarn lint && yarn test:unit",
    "precommit": "flow check && lint-staged",
    "test": "yarn test:unit && yarn test:integration",
    "test:integration": "NODE_ENV=test babel-node ./bin/test.js --integration",
    "test:unit": "NODE_ENV=test babel-node ./bin/test.js"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write '**/*.js'",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.38",
    "@babel/node": "^7.0.0-beta.38",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "@babel/preset-flow": "^7.0.0-beta.38",
    "@babel/preset-react": "^7.0.0-beta.38",
    "@babel/preset-stage-0": "^7.0.0-beta.38",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "chalk": "^2.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.63.1",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "jest-fetch-mock": "^1.4.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2",
    "puppeteer": "^1.0.0",
    "react-test-renderer": "^16.2.0",
    "sw-precache-webpack-plugin": "^0.11.4",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "material-ui": "^1.0.0-beta.32",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.4.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-router-dom": "^4.2.2"
  }
}
